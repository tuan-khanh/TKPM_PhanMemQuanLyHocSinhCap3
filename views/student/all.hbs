<main class="main-content" style="margin-top: 80px">
    <h3 class="align-center">Danh sách học sinh</h3>
    <div class="table-responsive-md my-3">
        <table id="all-table" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Họ tên</th>
                    <th scope="col">Ngày sinh</th>
                    <th scope="col">Giới tính</th>
                    <th scope="col">Email</th>
                    <th scope="col">Địa chỉ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <th scope="row">{{this.MaSo}}</th>
                    <td>{{this.HoTen}}</td>
                    <td>{{this.NgaySinh}}</td>
                    {{#ifCond this.GioiTinh "===" 1}}
                    <td>Nam</td>
                    {{/ifCond}}
                    {{#ifCond this.GioiTinh "===" 0}}
                    <td>Nữ</td>
                    {{/ifCond}}
                    <td>{{this.Email}}</td>
                    <td>{{this.DiaChi}}</td>
                    <td class="d-flex flex-column flex-lg-row justify-content-around ">
                        <a href="/student/update/{{this.MaSo}}" class="m-1 btn btn-success"><i
                                class="bi bi-pencil-fill"></i></a>
                        <a data-toggle="modal" data-id="{{this.MaSo}}" href="#deleteModal" class="m-1 btn btn-danger"><i
                                class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
                {{/each}}
                </tr>

            </tbody>
        </table>
    </div>
</main>

