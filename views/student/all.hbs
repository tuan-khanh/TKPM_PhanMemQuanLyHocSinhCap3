<main class="main-content" style="margin-top: 80px">
    <h3 class="text-center mt-5 pt-3 text-capitalize font-weight-bold">Danh sách tất cả học sinh</h3>
    <div class="table-responsive-md my-3">
        <table id="table" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col" class="text-center align-middle">#</th>
                    <th scope="col" class="text-center align-middle">MSHS</th>
                    <th scope="col" class="text-center align-middle">Họ tên</th>
                    <th scope="col" class="text-center align-middle">Lớp</th>
                    <th scope="col" class="text-center align-middle">TBHK1</th>
                    <th scope="col" class="text-center align-middle">TBHK2</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <th class="text-center align-middle" scope="row">{{@index}}</th>
                    <td class="text-center align-middle">{{this.MaSo}}</td>
                    <td id="{{this.ID}}-name" class="align-middle">{{this.HoTen}}</td>
                    <td class="text-center align-middle">{{this.Lop}}</td>
                    <td class="text-center align-middle">{{this.DTBHK1}}</td>
                    <td class="text-center align-middle">{{this.DTBHK2}}</td>
                    <td class="d-flex flex-column flex-lg-row justify-content-around ">
                        <a href="/student/update/{{this.ID}}" class="m-1 btn btn-success">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a data-toggle="modal" data-id="{{this.ID}}" action="/student/{{this.ID}}?_method=DELETE" href="#deleteModal" class="m-1 btn btn-danger">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</main>