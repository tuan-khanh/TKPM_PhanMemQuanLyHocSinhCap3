<main class="main-content" style="margin-top: 80px">
    <h3 class="align-center">Cập nhật thông tin học sinh</h3>
    <form class="mx-auto mt-3" action="/student/:id?_method=PUT" method="POST" style="max-width: 500px">
        <div class="form-row mb-2">
            <div class="col">
                <label for="studentId-input">Mã HS</label>
                <input type="text" class="form-control" id="studentId-input" name="studentId" value="1" required disabled>
            </div>
        </div>

        <div class="form-row mb-2">
            <div class="col">
                <label for="name-input">Họ tên</label>
                <input type="text" class="form-control" id="name-input" name="name" value="Nguyễn Tuấn Khanh" required>
            </div>
        </div>
        <div class="form-row mb-2">
            <div class="col-md-6">
                <label for="birthday-input">Ngày sinh</label>
                <input type="date" class="form-control" id="birthday-input" name="birthday" value="10/11/2001" required>
            </div>
            <div class="col-md-6">
                <label for="gender-input">Giới tính</label>
                <select class="custom-select" id="gender-input" required>
                    <option value="male" selected>Nam</option>
                    <option value="female">Nữ</option>
                </select>
            </div>

        </div>

        <div class="form-row mb-2">
            <div class="col">
                <label for="address-input">Địa chỉ</label>
                <input type="text" class="form-control" id="address-input" name="address" value="KTX ĐHQG Khu B" required>
            </div>
        </div>

        <div class="form-row mb-2">
            <div class="col">
                <label for="email-input">Email</label>
                <input type="email" class="form-control" id="email-input" name="email" value="nguyentuankhanhcqt@gmail.com" required>
            </div>
        </div>

        <button class="btn btn-primary" type="submit">Cập nhật</button>
        <a href="/student/all" class="btn btn-secondary">Hủy</a>
    </form>
</main>

