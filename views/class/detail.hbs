<main class="main-content" style="margin-top: 80px">
    <h3 class="text-center mt-5 pt-3 text-capitalize font-weight-bold">Danh Sách Lớp</h3>
    <div class="row">
        <div class="col text-center">
            <h5>
                Lớp: {{class.Ten}}
            </h5>
        </div>
        <div class="col text-center">
            <h5>
                Sĩ số: {{class.SiSo}}
            </h5>
        </div>
    </div>
    <div class="table-responsive-md my-3">
        <table id="table" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Họ tên</th>
                    <th scope="col">Ngày sinh</th>
                    <th scope="col">Giới tính</th>
                    <th scope="col">Địa chỉ</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <th scope="row">{{this.MaSo}}</th>
                    <td>{{this.HoTen}}</td>
                    <td>{{this.NgaySinh}}</td>
                    {{#ifCond this.GioiTinh "===" 1}}
                    <td>Nam</td>
                    {{/ifCond}}
                    {{#ifCond this.GioiTinh "===" 0}}
                    <td>Nữ</td>
                    {{/ifCond}}
                    <td>{{this.DiaChi}}</td>
                </tr>
                {{/each}}
                </tr>
            </tbody>
        </table>
    </div>
</main>