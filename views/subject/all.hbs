<main class="main-content" style="margin-top: 80px">
    <h3 class="text-center mt-5 pt-3 text-capitalize font-weight-bold">Danh sách các môn học</h3>
    <div class="table-responsive-md my-3">
        <table id="table" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col" class="text-center align-middle">STT</th>
                    <th scope="col" class="text-center align-middle">Mã Môn học</th>
                    <th scope="col" class="text-center align-middle">Tên Môn học</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each subjects}}
                <tr>
                    <th class="text-center align-middle" scope="row">{{@index}}</th>
                    <td class="text-center align-middle" >{{this.MaBM}}</td>
                    <td class="text-center align-middle" id="{{this.ID}}-name">{{this.Ten}}</td>
                    <td class="d-flex flex-column flex-lg-row justify-content-around ">
                        <a href="/subject/update/{{this.ID}}" class="m-1 btn btn-success"><i
                                class="bi bi-pencil-fill"></i></a>
                        <a data-toggle="modal" data-id="{{this.ID}}" action="/subject/{{this.ID}}?_method=DELETE" href="#deleteModal" class="m-1 btn btn-danger"><i
                                class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</main>