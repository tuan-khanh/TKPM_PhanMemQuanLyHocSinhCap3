<main class="main-content" style="margin-top: 80px">
    <h3 class="text-center mt-5 pt-3 text-capitalize font-weight-bold">Danh sách quy định</h3>

    <div class="table-responsive-md my-3">
        <table id="rule-table" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col" class="text-center">Mã QĐ</th>
                    <th scope="col" class="">Tên Quy định</th>
                    <th scope="col" class="text-center">Giá trị</th>
                </tr>
            </thead>
            <tbody>
                {{#each rules}}
                <tr>
                    <th scope="row" class="text-center">{{@index}}</th>
                    <td class="text-center">{{this.ID}}</td>
                    <td id="row-{{@index}}-name" class="">{{this.Ten}}</td>
                    <td class="text-center">
                        {{#if this.isFloat}}
                            <input class="w-100 text-center rule-input" type="number" id="row-{{@index}}" name="value" value="{{this.GiaTri}}" data-id="{{this.ID}}" data-type="{{this.KieuDuLieu}}" step="0.01">
                        {{else}}
                            <input class="w-100 text-center rule-input" type="number" id="row-{{@index}}" name="value" value="{{this.GiaTri}}" data-id="{{this.ID}}" data-type="{{this.KieuDuLieu}}">
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</main>